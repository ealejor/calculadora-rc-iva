<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RCIVA" parent="android:Theme.Material.Light.NoActionBar"/>

    <style name="Post.Theme" parent="Theme.RCIVA" />

    <style name="Splash.Theme" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.RCIVA.Splash" parent="Splash.Theme">
        <!-- <item name="android:windowFullscreen">true</item>-->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="windowSplashScreenBackground">@color/surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Post.Theme</item>
    </style>
</resources>

